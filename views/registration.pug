extends layout

block content
  h1 New User Registration
  form(method="POST", action="/users/registration")
    .form-group
      label Name:
      input.form-control(name="name", type="text")
    .form-group
      label Username:
      input.form-control(name="username", type="text")
    .form-group
      label Email:
      input.form-control(name="email", type="email")
    .form-group
      label Password:
      input.form-control(name="password", type="password")
    .form-group
      label Confirm Password:
      input.form-control(name="password-cnf", type="password")
    br
    input.btn.btn-primary(type='submit', value="Submit")
